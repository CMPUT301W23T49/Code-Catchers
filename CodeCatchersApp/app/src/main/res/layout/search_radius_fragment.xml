<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_radius_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF68d058"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT RADIUS"
        android:textColor="#000000"
        android:textSize="16sp"
        android:letterSpacing="0.2"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/search_radius_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:max="100"
        android:progress="50"
        android:textStyle="bold"
        android:thumbTint="@color/color_barnz"
        android:progressTint="@color/color_barnz"/>

    <TextView
        android:id="@+id/search_radius_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 km"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"/>


</LinearLayout>