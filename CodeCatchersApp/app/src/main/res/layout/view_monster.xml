<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_pink">

    <TextView
        android:id="@+id/view_mon_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/dark_pink_button"
        android:text="Comment"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/view_comment_username"
        tools:layout_editor_absoluteX="60dp" />

    <TextView
        android:id="@+id/view_comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Username"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="59dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_marginTop="352dp"
        android:text="MONSTER NAME"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mon_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="287dp"
        android:layout_height="254dp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="80dp"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>